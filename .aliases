# List all files colorized in long format, including dot files
alias la="ls -Gla"
alias ls="ls -la"

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias ips="ifconfig -a | perl -nle'/(\d+\.\d+\.\d+\.\d+)/ && print $1'"

# View HTTP traffic
alias sniff="sudo ngrep -d 'en0' -t '^(GET|POST) ' 'tcp and port 80'"
alias httpdump="sudo tcpdump -i en0 -n -s 0 -w - | grep -a -o -E \"Host\: .*|GET \/.*\""

# Drush & Drupal
alias drupalcs="phpcs --standard=Drupal --extensions='php,module,inc,install,test,profile,theme,js,css,info,txt'"
alias drush='~/drush8/drush8'

# Disable Spotlight
alias spotoff="sudo mdutil -a -i off"
# Enable Spotlight
alias spoton="sudo mdutil -a -i on"

# Gadgets and Hackz
alias beep="osascript -e 'display notification \"\" with title \"All done.\"' && say all done"


alias cpssh="pbcopy < ~/.ssh/id_rsa.pub"

# Yarn rocks
alias y=yarn

